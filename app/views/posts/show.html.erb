<% if @post.logo.exists? %>
  <%= image_tag(@post.logo.url(:medium)) %>
  <% else %>
  None
<% end %>

<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<% simple_format(@post.content) %>
<h3><%= @post.comments_count %> Answers</h3>
<hr>
<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<%= form_for @comment, :url => post_comments_path(@post) do |f| %>

  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>
  <%= f.submit "Create" %>
<% end %>
<p><%= link_to "Back to index", posts_path %></p>