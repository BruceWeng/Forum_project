<%= @post.title %>
<% simple_format(@post.content) %>
<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<%= form_for @comment, :url => post_comments_path(@post) do |f| %>

  <%= f.label :content, "Content" %>
  <%= f.text_area :content %>
  <%= f.submit "Create" %>
<% end %>
<p><%= link_to "Back to index", posts_path %></p>