<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.comments_count %>
      <%= post.title %>
      <%= link_to "Show", post_path(post) %>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post_path(post), :method => :delete, :data => {:confirm => "Are you sure?"} %>
    </li>
  <% end %>
</ul>
<%= link_to "New post", new_post_path %>